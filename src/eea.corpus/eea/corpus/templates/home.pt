<div metal:use-macro="load: layout.pt">
  <div metal:fill-slot="content">

    <div class="content">
      <h1>
        <span class="font-semi-bold">EEA</span>
        <span class="smaller">Corpus Server</span>
      </h1>

      <p class="lead">A ML based <span class="font-normal">topic modeling</span> tool.</p>

      <ul class="list-group">
        <li class="list-group-item" tal:repeat="doc documents">
          <div class="btn-toolbar" role="group">
            <a href="/view/${doc}/" class="btn">
              ${doc}
            </a>
            <a href="/process/${doc}/" class="btn pull-right">
              <i class="glyphicon glyphicon-cog"></i>
            </a>
          </div>
        </li>
      </ul>

    </div>

  </div>
</div>
